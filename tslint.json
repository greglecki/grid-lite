{
    "extends": "tslint:recommended",
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "object-literal-sort-keys": false,
        "max-line-length": [
            true,
            {
                "limit": 200,
                "ignore-pattern": "^import |^export {(.*?)}|class [a-zA-Z]+ implements |//"
            }
        ],
        "no-unused-expression": [
            true,
            "allow-fast-null-checks"
        ],
        "array-type": [
            true,
            "array"
        ],
        "prefer-for-of": false,
        "only-arrow-functions": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format"
        ]
    }
}
